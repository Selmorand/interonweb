@page
@model InteronBlog.Pages.Services.IndexModel
@{
    ViewData["Title"] = "AI Readiness Services - Schema Implementation & Optimization";
    ViewData["Description"] = "Professional AI Readiness services including schema markup implementation, SEO optimization, and structured data setup for businesses.";
    ViewData["CanonicalUrl"] = "https://interon.co.za/services/";
    ViewData["SchemaJson"] = @"{
  ""@context"": ""https://schema.org"",
  ""@type"": ""Service"",
  ""name"": ""AI Readiness Services"",
  ""provider"": {
    ""@type"": ""Organization"",
    ""name"": ""AI Readiness Platform""
  },
  ""description"": ""Professional services to make your business machine-readable through schema implementation and AI optimization."",
  ""serviceType"": ""Digital Marketing"",
  ""hasOfferCatalog"": {
    ""@type"": ""OfferCatalog"",
    ""name"": ""AI Readiness Service Packages"",
    ""itemListElement"": [
      {
        ""@type"": ""Offer"",
        ""itemOffered"": {
          ""@type"": ""Service"",
          ""name"": ""Schema Implementation"",
          ""description"": ""Professional implementation of Organization, LocalBusiness, Service, and Product schema.""
        }
      },
      {
        ""@type"": ""Offer"",
        ""itemOffered"": {
          ""@type"": ""Service"",
          ""name"": ""Full AI Readiness Package"",
          ""description"": ""Complete optimization including schema, content restructuring, and GEO optimization.""
        }
      }
    ]
  }
