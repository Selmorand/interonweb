@using Microsoft.Extensions.Options
@inject IOptions<SiteSettings> SiteSettings
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - @SiteSettings.Value.SiteName</title>
    <meta name="description" content="@ViewData["Description"]">
    @if (ViewData["CanonicalUrl"] != null)
    {
        <link rel="canonical" href="@ViewData["CanonicalUrl"]">
    }

    <!-- Open Graph -->
    <meta property="og:type" content="@(ViewData["OgType"] ?? "website")">
    <meta property="og:title" content="@ViewData["Title"] - @SiteSettings.Value.SiteName">
    <meta property="og:description" content="@ViewData["Description"]">
    @if (ViewData["OgUrl"] != null)
    {
        <meta property="og:url" content="@ViewData["OgUrl"]">
    }
    <meta property="og:site_name" content="@SiteSettings.Value.SiteName">
    @if (ViewData["OgImage"] != null)
    {
        <meta property="og:image" content="@ViewData["OgImage"]">
    }

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="@ViewData["Title"] - @SiteSettings.Value.SiteName">
    <meta name="twitter:description" content="@ViewData["Description"]">
    @if (ViewData["OgImage"] != null)
    {
        <meta name="twitter:image" content="@ViewData["OgImage"]">
    }

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/assets/images/favicon.png">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Styles -->
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link rel="stylesheet" href="/assets/css/blog.css">

    @if (ViewData["SchemaJson"] != null)
    {
        <script type="application/ld+json">
            @Html.Raw(ViewData["SchemaJson"])
        </script>
    }

    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <a href="/" class="logo"><img src="/assets/images/NewLogoWhite 2.png" alt="AI Readiness"></a>
            <button class="nav-toggle" aria-label="Toggle navigation" onclick="toggleNav()">
                <span></span><span></span><span></span>
            </button>
            <nav class="nav" id="nav">
                <a href="/learn/">Learn</a>
                <a href="/insights/">Insights</a>
                <a href="/audit/">Free Audit</a>
                <a href="/services/">Services</a>
                <a href="/about/">About</a>
                <a href="/audit/" class="btn btn-primary">Run Free Audit</a>
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <div>
                    <h4>Learn</h4>
                    <a href="/learn/ai-readiness/">AI Readiness</a>
                    <a href="/learn/seo/">SEO Fundamentals</a>
                    <a href="/learn/geo/">What is GEO?</a>
                    <a href="/learn/schema/">Schema Explained</a>
                </div>
                <div>
                    <h4>Insights</h4>
                    <a href="/insights/">All Posts</a>
                    <a href="/insights/?category=ai-readiness">AI Readiness</a>
                    <a href="/insights/?category=schema-markup">Schema Markup</a>
                    <a href="/insights/?category=seo">SEO</a>
                </div>
                <div>
                    <h4>Services</h4>
                    <a href="/services/">What We Fix</a>
                </div>
                <div>
                    <h4>Company</h4>
                    <a href="/about/">About</a>
                    <a href="/contact/">Contact</a>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year Interon. AI Readiness Platform.</p>
            </div>
        </div>
    </footer>

    <script src="/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
